
.avatar_card {
  background: rgb(255, 255, 255);
  opacity: 0.9;
  margin: 30rpx 30rpx 5rpx 30rpx;
  min-height: 100px;
  z-index: 100;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
}

.avatar{
  width: 120rpx;
  height: 120rpx;
  overflow:hidden;  
  border-radius: 50%; 
  margin-bottom: 30rpx;
} 

.left_side {
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.right_side {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
}

.button {
  margin-top: 10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}